<div class="row">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
    <h1>News</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <% @news.each do |news| %>
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><h3><%= news.title %></h3></h4>
          <h6 class="card-subtitle mb-2 text-muted"><%= News.human_attribute_name :published_at %>:  <%= news.published_at.to_s(:short) %></h6>
          <div class="card-text fr-view clearfix">
            <%= news.teaser.html_safe %>
          </div>
          <%= link_to t('views.news.read_more'), news_path(news), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
