<div class="row">
  <div class="col-xs-12">
    <p id="notice"><%= notice %></p>
    <h1>News</h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <% @news.each do |news| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= news.title %></h3>
        </div>
        <div class="panel-body">
          <div class="fr-view clearfix">
            <%= news.teaser.html_safe %>
          </div>
          <div class="pull-right">
            <%= link_to t('views.news.read_more'), news_path(news) %>
          </div>
        </div>
        <div class="panel-footer">
          <%= News.human_attribute_name :published_at %>:  <%= news.published_at.to_s(:short) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
